{
  "name": "vite-plugin-node-polyfills",
  "description": "A Vite plugin to polyfill Node's Core Modules for browser environments.",
  "version": "0.0.1",
  "license": "MIT",
  "keywords": [
    "node",
    "node-core-modules",
    "node-polyfills",
    "node-stdlib",
    "polyfills",
    "vite",
    "vite-plugin"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./shims": "./shims/dist/index.js"
  },
  "scripts": {
    "build": "run-s build:core build:shims build:types",
    "build:core": "vite build",
    "build:shims": "vite build ./shims",
    "build:types": "tsc",
    "test": "run-s test:build test:dev",
    "test:build": "vite -c test/vite.config.ts build",
    "test:dev": "vite -c test/vite.config.ts"
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "esbuild": "^0.16.16",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.8.1",
    "typescript": "4.8.3",
    "vite": "^4.0.4",
    "vite-plugin-externalize-deps": "^0.1.5",
    "vite-plugin-inspect": "^0.6.0"
  },
  "dependencies": {
    "@rollup/plugin-inject": "^5.0.3",
    "buffer-polyfill": "npm:buffer@^6.0.3",
    "node-stdlib-browser": "^1.2.0",
    "process-polyfill": "npm:process@^0.11.10"
  },
  "peerDependencies": {
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
